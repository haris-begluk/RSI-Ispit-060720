@*
    THIS IS A PARTIAL VIEW
*@
@model RS1_Ispit_asp.net_core.ViewModels.TakmicenjeVM

<table class="table table-striped">
    <thead>
        <tr>
            <th>Škola</th>
            <th>Razred</th>
            <th>Datum</th>
            <th>Predmet</th>
            <th>
                Najbolji učesnik
                (Škola | Odjeljenje |
                Ime i prezime)
            </th>
            <th>Akcija</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.Data)
        {
            <tr>
                <td>@x.Skola</td>
                <td>@x.Razred</td>
                <td>@x.Datum</td>
                <td>@x.Predmet</td>
                <td>@x.NajboljiUcenik</td>
                <td>
                    <a asp-action="Rezultati" asp-route-TkmID="@x.TakmicenjeId">Rezultati</a>
                </td>
            </tr>
        }
    </tbody>
</table>